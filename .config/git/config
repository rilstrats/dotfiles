[alias]
	c = commit
	acm = commit -am
	cam = commit -am
	cm = commit -m

	a = add
	d = diff
	f = fetch
	m = move
	r = restore
	s = status

	u = restore --staged
	unstage = restore --staged

	origin = remote get-url origin
	rgo = remote get-url origin
	rso = remote set-url origin

	subpush = push --recurse-submodules=on-demand
	subupdate = submodule update --remote
	subinit = submodule update --init --checkout

	cclone = codeclone
	cc = codeclone
	cinit = codeinit
	ci = codeinit

	root = rev-parse --show-toplevel

[color]
	ui = auto
[commit]
	gpgsign = true
[credential]
	helper = cache
[diff]
	colorMoved = default
[gpg]
	format = ssh
[init]
	defaultBranch = master
[push]
	default = current
	autoSetupRemote = true
[merge]
	ff = never
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
[url "git@gitlab.com:"]
	pushInsteadOf = https://gitlab.com/
[user]
	signingkey = ~/.ssh/id_ed25519.pub

# user.name and user.email
[include]
	path = github
[includeIf "gitdir:~/code/gitlab.com/**"]
	path = gitlab

# delta
[include]
	path = ~/.config/delta/delta.gitconfig
