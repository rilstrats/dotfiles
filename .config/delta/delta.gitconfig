[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    side-by-side = true
    map-styles = bold purple => syntax magenta, bold cyan => syntax blue
    true-color = always
    hyperlinks = true

[merge]
    conflictStyle = zdiff3

[include]
    path = themes/tokyonight_moon.gitconfig
