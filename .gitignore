# Ignore all files in .local by default
/.local/*

# User Executables
!/.local/bin
/.local/bin/*

!/.local/bin/rgb
!/.local/bin/git-*
!/.local/bin/tmux-*
!/.local/bin/zellij-*
!/.local/bin/ssh-copy-terminfo
!/.local/bin/nerdfont-download

# Application State
!/.local/state
/.local/state/*

!/.local/state/zsh
/.local/state/zsh/*
!/.local/state/zsh/.gitkeep

# Application Data
!/.local/share
/.local/share/*

!/.local/share/vagrant
/.local/share/vagrant/*
!/.local/share/vagrant/Vagrantfile

# Docker
/.config/docker/*
!/.config/docker/config.json

# Wakatime
/.config/wakatime/*
!/.config/wakatime/.wakatime.cfg

# Zellij Plugins
/.config/zellij/plugins

# ZSH Compiled Files
*.zwc
.zcompdump

# git signing
/.config/git/signing
